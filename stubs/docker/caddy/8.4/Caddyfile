{
    # Global options
    admin off
    auto_https off
}

# Main server block
:8080 {
    root * /var/www/html/public

    # Enable gzip compression
    encode gzip zstd

    # Security headers
    header {
        # Remove server information
        -Server
        # Security headers
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        # Cache control for static assets
        Cache-Control "public, max-age=31536000" {
            path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.ico *.woff *.woff2
        }
    }

    # Health check endpoint (fallback - Laravel handles /up)
    respond /health 200 {
        body "OK"
    }

    # Handle PHP files with PHP 8.4
    php_fastcgi unix//var/run/php/php8.4-fpm.sock {
        index index.php
        try_files {path} /index.php?{query}
    }

    # Static file serving
    file_server {
        # Disable directory browsing
        hide .htaccess .env
    }

    # Laravel routes (SPA fallback)
    try_files {path} {path}/ /index.php?{query}

    # Log to stdout for container environments
    log {
        output stdout
        format console
    }

    # Error handling
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}
